{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "todo",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "dueDate": {
      "type": "string",
      "format": "date"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000
    },
    "assignTo": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "name",
    "dueDate",
    "description",
    "assignTo"
  ],
  "additionalProperties": false
}